<style>
    .banner__wrapper {
        display: grid;
        grid-template-rows: 36% max-content;
        font-family: var(--font-heading-family);
        text-transform: uppercase;
        color: #141414;
    }
    .banner__image {
        width: 100%;
        object-fit: cover;
        grid-column: 1;
        grid-row: 1;
    }
    .banner__image img {
        width: 100%;
        object-fit: cover;
    }
    .banner__content {
        margin-inline: 10px;
        background: #F2F2F2;
        grid-column: 1;
        grid-row: 2;
        text-align: center;
        padding: 22px 17px 24px 17px;
    }
    .banner__title {
        font-size: clamp(14px, 2vw, 20px);
        font-weight: 400;
        letter-spacing: 0.88px;
        margin: 0 0 13px 0;
    }
    .banner__discount {
        margin: 0 0 20px 0;
        font-size: clamp(36px, 6vw, 80px);
        line-height: normal;
    }
    .banner__discount p {
        margin: 0;
    }
    .banner-menu {
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }
    .banner-menu-link {
        flex: 1 1 calc(50% - 16px);
        padding-block: 6px;
    }
    .banner-menu-link a {
        font-size: 12px;
    }
    @media screen and (min-width: 600px) {
        .banner__wrapper {
            grid-template-rows: none;
            align-items: center;
        }
        .banner__content {
            margin-inline: 10px;
            background: transparent;
            grid-column: 1;
            grid-row: 1;
            width: 50%;
        }
    }
    @media screen and (min-width: 880px) {
        .banner__content {
            width: 53%;
        }
        .banner-menu-link {
            list-style: none;
            background: #141414;
            flex: 1 1 calc(25% - 16px);
            padding-block: 10px;
        }
        .banner-menu-link a {
            font-size: 14px;
        }
    }
</style>

<section class="banner" id="{{ section.id }}">
  <div class="banner__wrapper">
    <div class="banner__image">
      <picture>
        <!-- Mobile -->
        <source 
          media="(max-width: 600px)" 
          srcset="
            {{ section.settings.mobile_image | image_url: width: 400 }} 400w,
            {{ section.settings.mobile_image | image_url: width: 800 }} 800w,
            {{ section.settings.mobile_image | image_url: width: 1200 }} 1200w
          " 
          sizes="100vw">

        <!-- Desktop -->
        <source 
          media="(min-width: 768px)" 
          srcset="
            {{ section.settings.desktop_image | image_url: width: 800 }} 800w,
            {{ section.settings.desktop_image | image_url: width: 1600 }} 1600w,
            {{ section.settings.desktop_image | image_url: width: 2400 }} 2400w,
            {{ section.settings.desktop_image | image_url: width: 3840 }} 3840w
          " 
          sizes="100vw">

        <img 
          src="{{ section.settings.desktop_image | image_url: width: 1600 }}" 
          alt="Banner" 
          class="banner__img">
      </picture>
    </div>
    
    <div class="banner__content">
      <h2 class="banner__title">{{ section.settings.title }}</h2>
      <div class="banner__discount">{{ section.settings.discount }}</div>
      <div class="banner__links">
        <ul class="banner-menu">
          {% for link in section.settings.banner_menu.links %}
            {% render 'button-test', url: link.url, title: link.title  %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "banner test",
    "settings": [
        {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "mobile image"
        },
        {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "desktop image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "banner title",
            "default": "in stores & online",
            "info": "use to set a banner title"
        },
        {
            "type": "richtext",
            "id": "discount",
            "label": "use to set a discountt title",
            "default": "<p>50% off</p><p>everything</p>",
            "info": "use to set a discount title"
        },
        {
            "type": "link_list",
            "id": "banner_menu",
            "label": "use to set links for the banner",
        },
    ],
    "presets": [
      {
        "name": "banner test"
      }
    ]
  }
{% endschema %}
