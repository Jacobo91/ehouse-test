<style>
    .header {
        display: flex;
    }
</style>

<header class="header">
    <h1 class="header__heading">
        <a class="header__heading-link">                
            <span class="h2">
                {{ section.settings.heading_text }}
            </span>  
        </a>
    </h1>
    <nav class="header__inline-menu">
        <ul class="list-menu">
            {% for link in section.settings.menu.links %}
                <li class="menu-link">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                    {% if link.links.size > 0 %}
                        <ul class="menu dropdown-child">
                            {% for child_link in link.links %}
                                <li class="menu-link">
                                    <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                                    {% if child_link.links.size > 0 %}
                                        <ul class="menu dropdown-grandchild">
                                            {% for grandchild_link in child_link.links %}
                                                <li class="menu-link">
                                                    <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
    <div class="header__icons"></div>
</header>

{% schema %}
  {
    "name": "header test",
    "settings": [
        {
            "type": "text",
            "id": "heading_text",
            "label": "header logo text",
            "default": "fakestore",
            "info": "use to display a logo text",
            "placeholder": "fakestore"
        },
        {
            "type": "link_list",
            "id": "menu",
            "label": "Menu",
            "default": "main-menu"
        },
    ],
    "blocks": [
      {
        "type": "block_type",
        "name": "Block name",
        "settings": [
          {
            "type": "text",
            "id": "block_setting_id",
            "label": "Block Setting Label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "header test"
      }
    ]
  }
{% endschema %}